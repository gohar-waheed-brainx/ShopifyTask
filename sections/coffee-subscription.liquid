{% schema %}
{
  "name": "Coffee Subscription",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "coffee_sub_bg_img",
      "label": "Background Image"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Products"
    },
    {
      "type": "image_picker",
      "id": "subtitle_icon",
      "label": "Subtitle Icon"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle_heading",
      "default": "Subtitle Heading",
      "label": "Subtitle Heading"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Subscribe to our emails",
      "label": "t:sections.newsletter.blocks.heading.settings.heading.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Be the first to know about new collections and exclusive offers.</p>",
      "label": "t:sections.newsletter.blocks.paragraph.settings.paragraph.label"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Coffee Subscription"
    }
  ]
}
{% endschema %}
