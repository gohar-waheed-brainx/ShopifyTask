  "name": "Organicpedia",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "organicpedia_background_bg_image",
      "label": "Background Image"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "inline_richtext",
      "id": "headline-text-1",
      "default": "Headline Text 1 Will Be Here",
      "label": "Headline 1"
    },
    {
        "type": "inline_richtext",
        "id": "headline-text-2",
        "default": "Headline Text 2 Will Be Here",
        "label": "Headline 2"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "Button Text"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
    },
    {
        "type": "image_picker",
        "id": "organicpedia_left-decoration-image",
        "label": "Left Decoration Image"
    },
    {
        "type": "image_picker",
        "id": "organicpedia_right-decoration-image",
        "label": "Right Decoration Image"
    },
    {
        "type": "image_picker",
        "id": "mobile-decoration-image",
        "label": "Mobile Decoration Image"
    },
    {
        "type": "inline_richtext",
        "id": "sec2-title",
        "default": "Section 2 Title",
        "label": "Section2 Title"
    },
    {
        "type": "inline_richtext",
        "id": "sec2-headline",
        "default": "Section 2 Headline Text Will Be Here",
        "label": "Section2 Headline"
    },
    {
        "type": "text",
        "id": "sec2-special-text",
        "default": "'Joy'",
        "label": "Section2 Special Text"
    },
    {
        "type": "text",
        "id": "sec2_button_label",
        "default": "Section2 Button label",
        "label": "Section2 Button Text"
    },
    {
        "type": "url",
        "id": "sec2_button_link",
        "label": "Section2 Button Link"
    },
    {
          "type": "text",
          "id": "sec2_subtitle-text",
          "default": "Text",
          "label": "Section2 Subtitle Text"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "block-heading",
          "default": "Heading",
          "label": "Block Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Organicpedia"
    }
  ]
}
{% endschema %}