{{ 'section-product-annoucement.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .product-annoucements-background {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: 55px;
  }

  @media screen and (min-width: 750px) {
    .product-annoucements-background {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class = "product-annoucements-background">
    <div class= "product-annoucements-background-image-wrapper">
        {% if section.settings.product_annoucement_bg_image != blank %}
            {{
                section.settings.product_annoucement_bg_image
                | image_url: width: 430
                | image_tag: fetchpriority: fetch_priority
            }}
        {% endif %}
    </div>
    <div class = "prod-annoucements-content-container">
        <div class= "prod-annoucements-content">
            {% if section.settings.title !=blank %}
                <h3 class= "prod-annoucements-title">
                    {{ section.settings.title }}
                </h3>
            {% endif %}
            {% if section.settings.headline-text-1 !=blank %}
                <p class= "prod-annoucements-headline">
                    {{ section.settings.headline-text-1 }}
                </p>
            {% endif %}
            {% if section.settings.headline-text-2 !=blank %}
                <p class= "prod-annoucements-headline-2">
                    {{ section.settings.headline-text-2 }}
                </p>
            {% endif %}
        </div>
    </div>
    <div class= "prod-annoucements-deals">
        {% for block in section.blocks %}
            <div class= "prod-annoucements-deals-content">
                {% if block.settings.image != blank %}
                    <div class= "prod-annoucements-content-image-wrapper">
                        {{
                            block.settings.image
                            | image_url: width: 347, height: 256
                            | image_tag: fetchpriority: fetch_priority
                        }}
                    </div>
                {% endif %}
                {% if block.settings.block-heading != blank %}
                    <p class= "prod-annoucements-content-heading">
                        {{ block.settings.block-heading }}
                    </p>
                {% endif %}
                {% if block.settings.block-text != blank %}
                    <p class= "prod-annoucements-content-text">
                        {{ block.settings.block-text }}
                    </p>
                {% endif %}
                {% if block.settings.button_label != blank %}
                    <div class= "prod-annoucements-button-container">
                        <button class= "prod-annoucements-button">
                            {{ block.settings.button_label }}
                        </button>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Product Annoucements",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_annoucement_bg_image",
      "label": "Background Image"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "inline_richtext",
      "id": "headline-text-1",
      "default": "Headline Text 1 Will Be Here",
      "label": "Headline 1"
    },
    {
        "type": "inline_richtext",
        "id": "headline-text-2",
        "default": "Headline Text 2 Will Be Here",
        "label": "Headline 2"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "Button Text"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "block-heading",
          "default": "Heading",
          "label": "Block Heading"
        },
        {
          "type": "text",
          "id": "block-text",
          "default": "Block Text",
          "label": "Text"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button label",
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Annoucements",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}