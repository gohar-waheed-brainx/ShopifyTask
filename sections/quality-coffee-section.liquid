{{ 'section-quality-coffee.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .quality_coffee_container  {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .quality_coffee_container  {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class= "quality_coffee_container ">
    <div class= "page-width">
        {% if section.settings.headline-text != blank %}
            <h2
                class="quality_coffee_heading_text"
              >
                {{ section.settings.headline-text }}
              </h2>
        {% endif %}
        <div class= "quality_coffee_column_container">
            {% for block in section.blocks %}
                <div class = "quality_coffee_column_content">
                    {% if block.settings.image != blank %}
                        <div class = "quality_coffee_column_icon_desktop">
                            {{ block.settings.image | image_url: width: 45 | image_tag: fetchpriority: fetch_priority }}
                        </div>
                        {% if block.settings.image_mobile %}
                            <div class = "quality_coffee_column_icon_mobile">
                                {{ block.settings.image_mobile | image_url: width: 45 | image_tag: fetchpriority: fetch_priority }}
                            </div>
                        {% endif %}
                    {% endif %}
                    {% if block.settings.block-heading != blank %}
                        <h6 class= "quality_column_block_heading_text">
                            {{ block.settings.block-heading }}
                        </h6>
                    {% endif %}
                    {% if block.settings.block-text != blank %}
                        <p class= "quality_column_block_text">
                            {{ block.settings.block-text }}
                        </p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
{
  "name": "Quality Coffee",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "headline-text",
      "default": "Headline Text Will Be Here",
      "label": "Headline"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Icon"
        },
        {
          "type": "text",
          "id": "block-heading",
          "default": "Heading",
          "label": "Block Heading"
        },
        {
          "type": "text",
          "id": "block-text",
          "default": "Block Text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quality Coffee"
    }
  ]
}
{% endschema %}